    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :email, "email" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :account_name, "名前" %><br />
    <%= f.text_field :account_name %>
  </div>
