<% @posts.each do |post| %>
  <div class="post_area">
    <div class="title"><%= post.title %></div>
    <div class="updated_at"><%= post.updated_at.strftime("%Y/%m/%d %H:%M:%S") %></div>
    <div class="contents"><%= post.content.html_safe %></div>
    <div width="100%" style="margin: 10px;">
    <div class="author"><%= (post.user != nil) ? post.user.account_name : "" %></div>
      <div class="control_area">
        <%= link_to '続きを見る', post %>
        
        <% if current_user != nil && current_user.id == post.user_id %>
          <%= link_to '編集', edit_post_path(post) %>
          <%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除する?' } %>
        <% end %>
      </div>
      <br clear="all" />
    </div>
  </div>
<% end %>
